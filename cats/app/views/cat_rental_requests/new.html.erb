<%= render partial: "layouts/errors" %>

<h1>Cat Request Form</h1>
<form action="<%= cat_rental_requests_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <p>
    <label for="cat_rental_request_cat_id">Cat</label>
    <select name="cat_rental_request[cat_id]">
      <% Cat.all.each do |cat| %>
        <option value="<%=cat.id%>">
          <%=cat.name%>
        </option>
      <% end %>
    </select>
  </p>

  <p>
    <label for="cat_rental_request_start_date">Start date</label>
    <input type="date" name="cat_rental_request[start_date]" id="cat_rental_request_start_date">
    <br>

    <label for="cat_rental_request_end_date">End date</label>
    <input type="date" name="cat_rental_request[end_date]" id="cat_rental_request_end_date">
  </p>

  <input type="Submit" value="Request a cat">
</form>
