<h1><%= @album.title %></h1>

<h2>Tracks</h2>
<ul>
  <% @album.tracks.each do |track| %>
    <li><%= link_to track.title, track_url(track) %></li>
  <% end %>
</ul>

<footer>
  <ul>
    <% if current_user.admin %>
      <li><%= link_to "Add Track", new_album_track_url(@album) %></li>
      <li><%= link_to "Edit", edit_album_url(@album) %></li>
      <li><%= button_to "Remove", album_url(@album), method: :delete %></li>
    <% end %>
    <li><%= link_to @album.band.name, band_url(@album.band) %></li>
  </ul>
</footer>
