<!DOCTYPE html>
<html>
<head>
  <title>MusicApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<header>
  <% if logged_in? %>
    <%= link_to current_user.email, user_url(current_user) %><%= button_to "Log out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Log in", new_session_url %> or <%= link_to "Sign up", new_user_url %>
  <% end %>
</header>

<%= yield %>

</body>
</html>
